<div class="mx-4 mt-2">
  <% if (torneos.length > 0) { %>
  <div class="grid grid-cols-12 justify-end border-b-2 border-gray-300">
    <span class="col-span-4 col-end-13 rounded-t-md bg-gray-800 text-white px-3 py-1 tracking-wider text-center">
      ¿Inscrito?
    </span> 
  </div> 
  <div>
    <!-- Lista de torneos -->
    <% torneos.forEach(function(torneo) { %>
    <div class="border-b-2 border-gray-300 px-2 py-2 rounded">
      <div class="flex items-center">
        <!-- Colores por estado del torneo -->
        <% if (torneo.estado == 'activo') { %>
        <div class="w-4 h-4 rounded-full bg-green-500"></div>
        <% } else if (torneo.estado == 'inactivo') { %>
        <div class="w-4 h-4 rounded-full bg-red-500"></div>
        <% } else { %>
        <div class="w-4 h-4 rounded-full bg-yellow-500"></div>
        <% } %>
        <span class="ml-2 text-gray-800 font-medium"><%= torneo.nombre %></span>
      </div>
      <div class="grid grid-cols-12 flex items-center justify-between">
        <p class="col-span-8 pr-2 text-gray-700">¡Modalidad todos contra todos, donde 6 equipos competirán por ganarse el premio de...</p>
        <!-- Inscripcion por estado del torneo -->
        <% if (!torneo.inscrito) { %>
        <a href="#" class="col-span-4 justify-self-center w-24 px-2 py-2 bg-green-500 text-white rounded-md focus:outline-none hover:bg-green-400">Inscribirse</a>
        <% } else { %>
        <a href="#" class="col-span-4 justify-self-center px-2 w-24 py-2 bg-white border-2 border-gray-600 text-gray-700 rounded-md focus:outline-none hover:text-gray-600 hover:border-gray-500">Ver</a>
        <% } %>
      </div>
      <div class="flex flex-col mt-2 text-sm text-gray-600">
        <span>Equipos registrados: <%= torneo.registrados %>/<%= torneo.max %></span> 
        <span>Estado: Activo</span> 
      </div>
     </div> 
    <% }) %>
  </div>
  <% } else { %>
  <div>
    No hay torneos 
  </div>
  <% } %>
</div>

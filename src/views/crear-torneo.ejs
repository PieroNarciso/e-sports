    <div class="px-4 main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h2>Datos del Torneo</h2>
    </div>

    <form>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="Nombre">Nombre</label>
          <input type="text" class="form-control" id="Nombre" placeholder="Nombre del torneo">
        </div>
        <div class="form-group col-md-6">
          <label for="tipoTorneo">Tipo de torneo</label>
          <input type="text" class="form-control" id="tipoTorneo" value="Todos contra todos" readonly>
        </div>
      </div>

      <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea class="form-control" id="descripcion" rows="5" placeholder="Descripción acerca del torneo"></textarea>
      </div>

      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="fechaInicio">Fecha de inicio</label>
          <input type="text" class="form-control" id="fechaInicio" placeholder="Fecha de inicio del torneo">
        </div>
        <div class="form-group col-md-3">
          <label for="fechaFin">Fecha de finalización</label>
          <input type="text" class="form-control" id="fechaFin" placeholder="Fecha fin del torneo">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="partidos">Partidos por día</label>
          <input type="text" class="form-control" id="partidos" placeholder="Cantidad total de partidos por día">
        </div>
        <div class="form-group col-md-3">
          <label for="numEq">Número de equipos</label>
          <input type="text" class="form-control" id="numEq" placeholder="El número máximo de equipos es 6">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="victoria">Ptj. Victoria</label>
          <input type="text" class="form-control" id="victoria" placeholder="Puntaje por victoria">
        </div>
        <div class="form-group col-md-2">
          <label for="derrota">Ptj. Derrota</label>
          <input type="text" class="form-control" id="derrota" placeholder="Puntaje por derrota">
        </div>
        <div class="form-group col-md-2">
          <label for="empate">Ptj. Empate</label>
          <input type="text" class="form-control" id="empate" placeholder="Puntaje por empate">
        </div>
      </div>

    </form>

    <div style="padding-top: 10px;">
      <button class="btn btn-success">
        Crear
      </button>
      <button class="btn btn-warning">
        Cancelar
      </button>
    </div>
